{
  "compatibilities": [
    "EC2",
    "FARGATE"
  ],
  "containerDefinitions": [
    {
      "cpu": 1024,
      "environment": [
        {
          "name": "AWS_S3_REGION",
          "value": "{{AWS_REGION}}"
        },
        {
          "name": "AWS_S3_SECRET_KEY",
          "value": "{{AWS_S3_SECRET_KEY}}"
        },
        {
          "name": "AWS_S3_BUCKET",
          "value": "{{AWS_S3_BUCKET}}"
        },
        {
          "name": "SPRING_DATASOURCE_URL",
          "value": "{{SPRING_DATASOURCE_URL}}"
        },
        {
          "name": "SPRING_DATASOURCE_PASSWORD",
          "value": "{{SPRING_DATASOURCE_PASSWORD}}"
        },
        {
          "name": "AWS_S3_PRESIGNED_URL_EXPIRATION",
          "value": "{{AWS_S3_PRESIGNED_URL_EXPIRATION}}"
        },
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "{{SPRING_PROFILES_ACTIVE}}"
        },
        {
          "name": "SPRING_DATASOURCE_USERNAME",
          "value": "{{SPRING_DATASOURCE_USERNAME}}"
        },
        {
          "name": "JVM_OPTS",
          "value": "{{JVM_OPTS}}"
        },
        {
          "name": "STORAGE_TYPE",
          "value": "{{STORAGE_TYPE}}"
        },
        {
          "name": "AWS_S3_ACCESS_KEY",
          "value": "{{AWS_S3_ACCESS_KEY}}"
        }
      ],
      "essential": true,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:80/actuator/health || exit 1"
        ],
        "interval": 30,
        "retries": 3,
        "startPeriod": 60,
        "timeout": 5
      },
      "image": "{{ECR_REPOSITORY_URI}}:latest",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/{{ECS_TASK_DEFINITION}}",
          "awslogs-create-group": "true",
          "awslogs-region": "{{AWS_REGION}}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "memory": 3072,
      "mountPoints": [],
      "name": "discodeit-app",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "systemControls": [],
      "volumesFrom": []
    }
  ],
  "cpu": "1024",
  "ephemeralStorage": {
    "sizeInGiB": 21
  },
  "executionRoleArn": "{{ECS_EXECUTION_ROLE_ARN}}",
  "family": "{{ECS_TASK_DEFINITION}}",
  "memory": "3072",
  "networkMode": "awsvpc",
  "placementConstraints": [],
  "requiresAttributes": [
    {
      "name": "com.amazonaws.ecs.capability.logging-driver.awslogs"
    },
    {
      "name": "ecs.capability.execution-role-awslogs"
    },
    {
      "name": "com.amazonaws.ecs.capability.docker-remote-api.1.19"
    },
    {
      "name": "ecs.capability.container-health-check"
    },
    {
      "name": "ecs.capability.extensible-ephemeral-storage"
    },
    {
      "name": "com.amazonaws.ecs.capability.docker-remote-api.1.18"
    },
    {
      "name": "ecs.capability.task-eni"
    },
    {
      "name": "com.amazonaws.ecs.capability.docker-remote-api.1.29"
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "volumes": [],
  "tags": []
}
